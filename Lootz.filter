# Uncomment ONE of the following to activate mode
# EnableFarmingMode
# EnableBossingMode

# =========================
# üí∞ CURRENCY (Always Shown)
# =========================
Show
  Class "Currency"
  Rarity "Normal" "Magic" "Rare" "Unique"
  SetBorderColor 255 215 0 255
  SetBackgroundColor 40 40 0 220
  PlayAlertSound 5 300

# =========================
# üî∑ DJINN BARYA TOKENS
# =========================
Show
  BaseType "Djinn Barya"
  SetBorderColor 180 0 180 255
  SetBackgroundColor 60 0 60 200
  PlayAlertSound 4 275

# =========================
# üîÅ FARMING MODE BLOCK
# =========================
#IF EnableFarmingMode

# üß§ Slotted Gear for Destruction
Show
  Class "Armor" "Weapon"
  SocketGroup "!"""""
  Rarity "Normal" "Magic"
  SetBorderColor 100 100 255 200
  SetBackgroundColor 20 20 60 180
  PlayAlertSound 2 200

# üßô Witch-Class Drops
Show
  Class "Armor" "Weapon"
  BaseType "Witch Hat" "Witch Robe" "Witch Gloves" "Witch Boots" "Witch Wand" "Witch Scepter"
  Rarity "Magic" "Rare" "Unique"
  SetBorderColor 180 0 180 255
  SetBackgroundColor 60 0 60 200
  PlayAlertSound 4 275

# ‚úÖ Equippable Upgrades
Show
  Class "Armor" "Weapon"
  Rarity "Rare" "Unique"
  SocketGroup "!"""""
  HasMod "Upgradeable"
  SetBorderColor 0 255 0 255
  SetBackgroundColor 0 60 0 200
  PlayAlertSound 3 250

#ENDIF

# =========================
# üîÅ BOSSING MODE BLOCK
# =========================
#IF EnableBossingMode

# üéØ Trial Keys and Relics
Show
  BaseType "Djinn Barya" "Relic" "Trial Key"
  SetBorderColor 255 0 100 255
  SetBackgroundColor 50 0 20 200
  PlayAlertSound 6 300

# üßô Witch-Class Upgrades
Show
  Class "Armor" "Weapon"
  BaseType "Witch Hat" "Witch Robe" "Witch Gloves" "Witch Boots" "Witch Wand" "Witch Scepter"
  Rarity "Rare" "Unique"
  HasMod "Upgradeable"
  SetBorderColor 0 255 255 255
  SetBackgroundColor 0 60 60 200
  PlayAlertSound 3 250

#ENDIF

# =========================
# üîí HIDE EVERYTHING ELSE
